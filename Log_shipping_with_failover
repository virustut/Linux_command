                    <span>Log Files</span>
                </div>
                <div class="legend-item">
                    <div class="legend-color" style="background: #17a2b8;"></div>
                    <span>Backup Files</span>
                </div>
            </div>
        </div>
    </div>

    <script>
        class LogShippingAnimation {
            constructor() {
                this.currentStep = 0;
                this.isPlaying = false;
                this.isPaused = false;
                this.animationTimeout = null;
                this.steps = [
                    {
                        title: "Step 1: Transaction Log Backup Job",
                        description: "The backup job on the primary server creates transaction log backups at scheduled intervals.",
                        duration: 3000
                    },
                    {
                        title: "Step 2: Copy Job Transfers Files", 
                        description: "The copy job transfers the backup files from the primary server to the secondary server.",
                        duration: 4000
                    },
                    {
                        title: "Step 3: Restore Job Applies Logs",
                        description: "The restore job on the secondary server applies the transaction log backups to maintain synchronization.",
                        duration: 3000
                    },
                    {
                        title: "Step 4: Primary Server Failure",
                        description: "Simulating primary server failure - the connection is lost and failover process begins.",
                        duration: 3000
                    },
                    {
                        title: "Step 5: Failover - Role Reversal",
                        description: "Secondary server is promoted to PRIMARY. Original primary becomes new SECONDARY when recovered.",
                        duration: 4000
                    },
                    {
                        title: "Step 6: New Configuration Active",
                        description: "Log shipping now flows in reverse direction with the new primary-secondary setup.",
                        duration: 3000
                    }
                ];

                this.initializeEventListeners();
            }

            initializeEventListeners() {
                document.getElementById('playBtn').addEventListener('click', () => this.startAnimation());
                document.getElementById('pauseBtn').addEventListener('click', () => this.pauseAnimation());
                document.getElementById('resetBtn').addEventListener('click', () => this.resetAnimation());
            }

            startAnimation() {
                if (this.isPaused) {
                    this.isPaused = false;
                    this.updateControls();
                    this.continueAnimation();
                } else {
                    this.isPlaying = true;
                    this.currentStep = 0;
                    this.updateControls();
                    this.runStep();
                }
            }

            pauseAnimation() {
                this.isPaused = true;
                this.isPlaying = false;
                if (this.animationTimeout) {
                    clearTimeout(this.animationTimeout);
                }
                this.updateControls();
            }

            resetAnimation() {
                this.isPlaying = false;
                this.isPaused = false;
                this.currentStep = 0;
                if (this.animationTimeout) {
                    clearTimeout(this.animationTimeout);
                }
                this.clearDiagram();
                this.updateControls();
                this.updateStepDescription();
                this.updateProgressIndicator();
            }

            updateControls() {
                const playBtn = document.getElementById('playBtn');
                const pauseBtn = document.getElementById('pauseBtn');
                
                playBtn.disabled = this.isPlaying && !this.isPaused;
                pauseBtn.disabled = !this.isPlaying || this.isPaused;
                
                playBtn.textContent = this.isPaused ? '‚ñ∂ Resume' : '‚ñ∂ Start Animation';
            }

            continueAnimation() {
                if (!this.isPaused) {
                    this.runStep();
                }
            }

            runStep() {
                if (this.currentStep >= this.steps.length) {
                    this.resetAnimation();
                    return;
                }

                this.updateStepDescription();
                this.updateProgressIndicator();
                this.executeStepAnimation();

                this.animationTimeout = setTimeout(() => {
                    if (!this.isPaused) {
                        this.currentStep++;
                        this.runStep();
                    }
                }, this.steps[this.currentStep].duration);
            }

            executeStepAnimation() {
                switch (this.currentStep) {
                    case 0:
                        this.animateBackupJob();
                        break;
                    case 1:
                        this.animateCopyJob();
                        break;
                    case 2:
                        this.animateRestoreJob();
                        break;
                    case 3:
                        this.animateFailure();
                        break;
                    case 4:
                        this.animateFailover();
                        break;
                    case 5:
                        this.animateNewConfiguration();
                        break;
                }
            }

            animateBackupJob() {
                const backupJob = document.getElementById('backupJob');
                const status1 = document.getElementById('status1');
                
                backupJob.style.opacity = '1';
                status1.classList.add('active');

                setTimeout(() => {
                    this.createLogFile(150, 200, 'LOG');
                }, 1000);

                setTimeout(() => {
                    this.createLogFile(170, 220, 'BAK', 'backup-file');
                    status1.textContent = '‚úÖ Backup Complete';
                }, 2000);

                setTimeout(() => {
                    status1.classList.remove('active');
                }, 2800);
            }

            animateCopyJob() {
                const copyJob = document.getElementById('copyJob');
                const line1 = document.getElementById('line1');
                const arrow1 = document.getElementById('arrow1');
                const status2 = document.getElementById('status2');
                
                line1.classList.add('fade-in');
                arrow1.classList.add('fade-in');
                copyJob.style.opacity = '1';
                status2.classList.add('active');

                setTimeout(() => {
                    this.moveFileAcross(170, 220, 580, 220, 'BAK', 'backup-file');
                }, 1000);

                setTimeout(() => {
                    status2.textContent = '‚úÖ Copy Complete';
                }, 3000);

                setTimeout(() => {
                    status2.classList.remove('active');
                }, 3800);
            }

            animateRestoreJob() {
                const restoreJob = document.getElementById('restoreJob');
                const status3 = document.getElementById('status3');
                
                restoreJob.style.opacity = '1';
                status3.classList.add('active');

                setTimeout(() => {
                    this.createLogFile(920, 200, 'REST', 'backup-file');
                    status3.textContent = '‚úÖ Restore Complete';
                }, 1500);

                setTimeout(() => {
                    status3.classList.remove('active');
                }, 2800);
            }



            animateFailure() {
                const primaryServer = document.querySelector('.primary-server');
                const line1 = document.getElementById('line1');
                const arrow1 = document.getElementById('arrow1');
                const statusFailover = document.getElementById('statusFailover');
                
                // Show failure
                primaryServer.classList.add('server-failed');
                line1.style.opacity = '0.3';
                arrow1.style.opacity = '0.3';
                statusFailover.classList.add('active');
                
                // Show disconnection effect
                setTimeout(() => {
                    line1.classList.remove('fade-in');
                    arrow1.classList.remove('fade-in');
                }, 2000);
            }

            animateFailover() {
                const primaryServer = document.querySelector('.primary-server');
                const secondaryServer = document.querySelector('.secondary-server');
                const primaryLabel = primaryServer.querySelector('div');
                const secondaryLabel = secondaryServer.querySelector('div');
                const statusFailover = document.getElementById('statusFailover');
                
                // Promote secondary to primary
                secondaryServer.classList.add('server-promoted');
                secondaryServer.style.borderColor = '#007bff';
                secondaryServer.style.background = 'linear-gradient(145deg, #e3f2fd, #bbdefb)';
                secondaryLabel.innerHTML = 'NEW Primary<br>Server';
                
                // Demote primary to secondary (when recovered)
                setTimeout(() => {
                    primaryServer.classList.remove('server-failed');
                    primaryServer.style.borderColor = '#6c757d';
                    primaryServer.style.background = 'linear-gradient(145deg, #f5f5f5, #e0e0e0)';
                    primaryServer.style.opacity = '1';
                    primaryLabel.innerHTML = 'NEW Secondary<br>Server';
                    
                    statusFailover.textContent = '‚úÖ FAILOVER COMPLETE';
                }, 2000);

                setTimeout(() => {
                    statusFailover.classList.remove('active');
                }, 3500);
            }

            animateNewConfiguration() {
                const lineReverse = document.getElementById('lineReverse');
                const arrowReverse = document.getElementById('arrowReverse');
                const backupJob = document.getElementById('backupJob');
                const restoreJob = document.getElementById('restoreJob');
                const status1 = document.getElementById('status1');
                const status3 = document.getElementById('status3');
                
                // Show new direction
                lineReverse.style.opacity = '1';
                arrowReverse.style.opacity = '1';
                
                // Update job positions and labels
                backupJob.style.right = '120px';
                backupJob.style.left = 'auto';
                restoreJob.style.left = '120px';
                restoreJob.style.right = 'auto';
                
                status1.style.right = '140px';
                status1.style.left = 'auto';
                status1.textContent = 'üîÑ NEW Secondary Restoring...';
                
                status3.style.left = '140px';
                status3.style.right = 'auto';
                status3.textContent = 'üîÑ NEW Primary Backing up...';
                
                // Show new flow
                setTimeout(() => {
                    backupJob.style.opacity = '1';
                    restoreJob.style.opacity = '1';
                    status1.classList.add('active');
                    status3.classList.add('active');
                }, 1000);
                
                setTimeout(() => {
                    this.moveFileAcross(920, 220, 240, 220, 'BAK', 'backup-file');
                }, 2000);
            }

            createLogFile(x, y, text, className = '') {
                const logFile = document.createElement('div');
                logFile.className = `log-file ${className}`;
                logFile.style.left = x + 'px';
                logFile.style.top = y + 'px';
                logFile.textContent = text;
                logFile.style.opacity = '0';

                document.getElementById('diagram').appendChild(logFile);

                setTimeout(() => {
                    logFile.style.opacity = '1';
                }, 100);

                return logFile;
            }

            moveFileAcross(startX, startY, endX, endY, text, className = '') {
                const file = this.createLogFile(startX, startY, text, className);
                
                setTimeout(() => {
                    file.style.transform = `translate(${endX - startX}px, ${endY - startY}px)`;
                    file.style.transition = 'transform 2s ease-in-out';
                }, 500);
            }

            pulseAllServers() {
                const servers = document.querySelectorAll('.server');
                servers.forEach(server => {
                    server.style.animation = 'pulse 1s ease-in-out 3';
                });
            }

            pulseAllJobs() {
                const jobs = document.querySelectorAll('.job-indicator');
                jobs.forEach(job => {
                    job.style.opacity = '1';
                });
            }

            createMultipleFiles() {
                const positions = [
                    {x: 130, y: 280, text: 'LOG1'},
                    {x: 330, y: 300, text: 'BAK1', class: 'backup-file'},
                    {x: 900, y: 280, text: 'REST1', class: 'backup-file'}
                ];

                positions.forEach((pos, index) => {
                    setTimeout(() => {
                        this.createLogFile(pos.x, pos.y, pos.text, pos.class || '');
                    }, index * 300);
                });
            }

            clearDiagram() {
                const logFiles = document.querySelectorAll('.log-file');
                logFiles.forEach(file => file.remove());

                const lines = document.querySelectorAll('.connection-line');
                lines.forEach(line => {
                    line.classList.remove('fade-in');
                    line.style.opacity = '0';
                });

                const arrows = document.querySelectorAll('.arrow');
                arrows.forEach(arrow => {
                    arrow.classList.remove('fade-in');
                    arrow.style.opacity = '0';
                });

                const jobs = document.querySelectorAll('.job-indicator');
                jobs.forEach(job => {
                    job.style.opacity = '0';
                    job.style.animation = 'pulse 2s infinite';
                    job.style.left = '';
                    job.style.right = '';
                });

                // Reset job positions
                document.getElementById('backupJob').style.left = '120px';
                document.getElementById('backupJob').style.right = 'auto';
                document.getElementById('restoreJob').style.right = '120px';
                document.getElementById('restoreJob').style.left = 'auto';

                const statuses = document.querySelectorAll('.job-status');
                statuses.forEach(status => {
                    status.classList.remove('active');
                    status.style.left = '';
                    status.style.right = '';
                    if (status.id === 'status1') {
                        status.textContent = 'üîÑ Creating Backup...';
                        status.style.left = '140px';
                        status.style.right = 'auto';
                    }
                    else if (status.id === 'status2') status.textContent = 'üì§ Copying Files...';
                    else if (status.id === 'status3') {
                        status.textContent = 'üîÑ Restoring Logs...';
                        status.style.right = '140px';
                        status.style.left = 'auto';
                    }
                    else if (status.id === 'statusFailover') status.textContent = '‚ö†Ô∏è FAILOVER IN PROGRESS';
                });

                // Reset servers
                const primaryServer = document.querySelector('.primary-server');
                const secondaryServer = document.querySelector('.secondary-server');
                
                primaryServer.classList.remove('server-failed', 'server-promoted');
                secondaryServer.classList.remove('server-failed', 'server-promoted');
                
                primaryServer.style.borderColor = '#007bff';
                primaryServer.style.background = 'linear-gradient(145deg, #e3f2fd, #bbdefb)';
                primaryServer.style.opacity = '1';
                primaryServer.querySelector('div').innerHTML = 'Primary<br>Server';
                
                secondaryServer.style.borderColor = '#6c757d';
                secondaryServer.style.background = 'linear-gradient(145deg, #f5f5f5, #e0e0e0)';
                secondaryServer.style.opacity = '1';
                secondaryServer.querySelector('div').innerHTML = 'Secondary<br>Server';

                const servers = document.querySelectorAll('.server');
                servers.forEach(server => {
                    server.style.animation = '';
                });
            }

            updateStepDescription() {
                const stepDesc = document.getElementById('stepDescription');
                if (this.currentStep < this.steps.length) {
                    const step = this.steps[this.currentStep];
                    stepDesc.innerHTML = `
                        <h3>${step.title}</h3>
                        <p>${step.description}</p>
                    `;
                } else {
                    stepDesc.innerHTML = `
                        <h3>Animation Complete</h3>
                        <p>The log shipping process demonstration is complete. Click Reset to start over.</p>
                    `;
                }
            }

            updateProgressIndicator() {
                const indicator = document.getElementById('progressIndicator');
                const current = Math.min(this.currentStep + 1, this.steps.length);
                indicator.textContent = `Step ${current}/${this.steps.length}`;
            }
        }

        // Initialize the animation when the page loads
        document.addEventListener('DOMContentLoaded', () => {
            new LogShippingAnimation();
        });
    </script>
</body>
</html>
